{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2018", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true
  },
  "exclude": [
    "dist",
    "test",
    "precode",
    "publish",
    "node_modules"
  ]
}
